{
   "name": "reserve-se-backend",
   "version": "1.0.0",
   "description": "Backend API for hotel reservation system",
   "main": "dist/index.js",
   "scripts": {
      "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
      "build": "tsc",
      "build:public": "cd ../public-frontend && npm install && npm run build",
      "build:all": "npm run build:public && npm run build",
      "start": "node dist/index.js",
      "test": "vitest",
      "test:watch": "vitest --watch",
      "migrate": "prisma migrate dev",
      "migrate:prod": "prisma migrate deploy",
      "seed": "ts-node src/scripts/seed.ts",
      "db:reset": "prisma migrate reset --force",
      "db:studio": "prisma studio"
   },
   "keywords": [
      "hotel",
      "booking",
      "api",
      "express",
      "prisma"
   ],
   "author": "",
   "license": "ISC",
   "dependencies": {
      "express": "^4.18.2",
      "zod": "^3.22.4",
      "cors": "^2.8.5",
      "helmet": "^7.1.0",
      "pino": "^8.16.1",
      "pino-pretty": "^10.2.3",
      "jsonwebtoken": "^9.0.2",
      "bcrypt": "^5.1.1",
      "express-rate-limit": "^7.1.5",
      "swagger-ui-express": "^5.0.0",
      "@prisma/client": "^5.6.0"
   },
   "devDependencies": {
      "typescript": "^5.2.2",
      "ts-node-dev": "^2.0.0",
      "@types/express": "^4.17.21",
      "@types/jsonwebtoken": "^9.0.5",
      "@types/bcrypt": "^5.0.2",
      "@types/node": "^20.8.10",
      "@types/cors": "^2.8.17",
      "@types/helmet": "^4.0.0",
      "@types/swagger-ui-express": "^4.1.6",
      "vitest": "^0.34.6",
      "supertest": "^6.3.3",
      "@types/supertest": "^2.0.16",
      "prisma": "^5.6.0",
      "@typescript-eslint/eslint-plugin": "^6.9.1",
      "@typescript-eslint/parser": "^6.9.1",
      "eslint": "^8.52.0"
   }
}
